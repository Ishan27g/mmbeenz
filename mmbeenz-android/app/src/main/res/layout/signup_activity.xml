<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".SignupActivity"

    >

    <ImageView
        android:id="@+id/mmbMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:padding="@dimen/ImagePadding"
        android:layout_margin="@dimen/image_margin"
        android:contentDescription="@string/meowmeowbeenz"
        app:srcCompat="@drawable/mmbhome" />

    <EditText
        android:id="@+id/username_text"
        style="@style/SignupLoginStyle"
        android:layout_width="@dimen/center_text_input"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:fontFamily="@string/Font1"
        android:hint="@string/username_hint"
        android:inputType="textPersonName"
        android:textStyle="italic"
        android:autofillHints="" />

    <EditText
        android:id="@+id/password_text"
        style="@style/SignupLoginStyle"
        android:layout_width="@dimen/center_text_input"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:fontFamily="@string/Font1"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:textStyle="italic"
        android:autofillHints="" />

    <LinearLayout
        android:layout_width="@dimen/center_text_input"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:fontFamily="@string/Font1"
            android:padding="@dimen/button_padding"
            android:text="@string/loginText"
            android:textSize="@dimen/font1Size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signup_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:padding="@dimen/button_padding"
            android:text="@string/signupText"
            android:fontFamily="@string/Font1"
            android:textSize="@dimen/font1Size"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>